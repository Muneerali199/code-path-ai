{
  "name": "codepath-ai",
  "displayName": "CodePath AI Coach",
  "description": "AI-powered coding assistant with dual-model architecture",
  "publisher": "codepath",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codepath-ai.explainCode",
    "onCommand:codepath-ai.generateCode",
    "onCommand:codepath-ai.debugCode",
    "onCommand:codepath-ai.analyzeCode",
    "onCommand:codepath-ai.refactorCode",
    "onCommand:codepath-ai.selectModel",
    "onCommand:codepath-ai.setUserApiKey",
    "onCommand:codepath-ai.clearUserApiKey"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepath-ai.explainCode",
        "title": "CodePath: Explain Selected Code"
      },
      {
        "command": "codepath-ai.generateCode",
        "title": "CodePath: Generate Code"
      },
      {
        "command": "codepath-ai.debugCode",
        "title": "CodePath: Debug Code"
      },
      {
        "command": "codepath-ai.analyzeCode",
        "title": "CodePath: Analyze Code"
      },
      {
        "command": "codepath-ai.refactorCode",
        "title": "CodePath: Refactor Code"
      },
      {
        "command": "codepath-ai.selectModel",
        "title": "CodePath: Select Model"
      },
      {
        "command": "codepath-ai.setUserApiKey",
        "title": "CodePath: Set User API Key"
      },
      {
        "command": "codepath-ai.clearUserApiKey",
        "title": "CodePath: Clear User API Key"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codepath-ai.explainCode",
          "when": "editorHasSelection",
          "group": "codepath-ai@1"
        },
        {
          "command": "codepath-ai.debugCode",
          "when": "editorHasSelection",
          "group": "codepath-ai@2"
        },
        {
          "command": "codepath-ai.analyzeCode",
          "when": "editorHasSelection",
          "group": "codepath-ai@3"
        },
        {
          "command": "codepath-ai.refactorCode",
          "when": "editorHasSelection",
          "group": "codepath-ai@4"
        }
      ],
      "commandPalette": [
        {
          "command": "codepath-ai.selectModel",
          "when": "true"
        },
        {
          "command": "codepath-ai.setUserApiKey",
          "when": "true"
        },
        {
          "command": "codepath-ai.clearUserApiKey",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "CodePath AI",
      "properties": {
        "codepath-ai.backendUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "URL of the CodePath backend service"
        },
        "codepath-ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authenticating with the CodePath backend"
        },
        "codepath-ai.userApiKey": {
          "type": "string",
          "default": "",
          "description": "Optional provider API key (fallback if Secret Storage is unavailable)"
        },
        "codepath-ai.model": {
          "type": "string",
          "default": "",
          "description": "Selected AI model ID",
          "enum": [
            "gpt-4o",
            "gpt-4.1",
            "claude-3.5-sonnet",
            "mistral-large",
            "gemini-1.5-pro",
            "qwen2.5-72b-instruct",
            "deepseek-r1",
            "yi-34b-chat",
            "glm-4",
            "moonshot-v1"
          ],
          "enumDescriptions": [
            "OpenAI — best overall for most tasks",
            "OpenAI — strong general model",
            "Anthropic — excellent reasoning + refactors",
            "Mistral — fast and cost‑effective",
            "Google — strong multimodal + long context",
            "Qwen — China region model",
            "DeepSeek — China region model",
            "Yi — China region model",
            "Zhipu — China region model",
            "Moonshot — China region model"
          ],
          "markdownDescription": "Selected AI model ID. You can also enter any custom model your backend supports."
        },
        "codepath-ai.provider": {
          "type": "string",
          "default": "",
          "description": "Selected AI model provider",
          "enum": [
            "openai",
            "anthropic",
            "mistral",
            "google",
            "qwen",
            "deepseek",
            "yi",
            "zhipu",
            "moonshot"
          ],
          "enumDescriptions": [
            "OpenAI",
            "Anthropic",
            "Mistral",
            "Google",
            "Qwen",
            "DeepSeek",
            "Yi",
            "Zhipu",
            "Moonshot"
          ],
          "markdownDescription": "Selected AI provider. You can also enter any custom provider your backend supports."
        },
        "codepath-ai.modelListSource": {
          "type": "string",
          "default": "dynamic",
          "enum": ["dynamic", "static"],
          "description": "Model list source: fetch from backend or use built-in fallback"
        },
        "codepath-ai.userId": {
          "type": "string",
          "default": "",
          "description": "User ID for tracking usage (optional)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "chai": "^6.2.2",
    "eslint": "^8.28.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}


